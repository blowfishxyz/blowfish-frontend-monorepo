{
  "name": "blowfish-extension",
  "displayName": "Blowfish Wallet Protect BETA",
  "version": "0.0.6",
  "description": "Blowfish API protection for injected web3 wallets",
  "author": "Kim Persson",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "yarn jest --passWithNoTests",
    "lint:prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint:prettier:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint": "yarn lint:eslint && yarn lint:prettier:check",
    "typecheck": "tsc --noEmit",
    "types:clean": "(cd ./src/utils/BlowfishApiClient/types && find . ! -name 'index.ts' -type f -exec rm -f {} + )",
    "types:copy": "cp ../blowfish-monorepo/components/types/bindings/* ./src/utils/BlowfishApiClient/types",
    "types:update": "yarn types:clean && yarn types:copy && yarn lint:prettier && yarn typecheck",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=3a6769686749"
  },
  "dependencies": {
    "plasmo": "0.61.2",
    "react": "18.2.0",
